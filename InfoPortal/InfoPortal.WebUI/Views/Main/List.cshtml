@model InfoPortal.WebUI.Models.ArticlesListViewModel

@{
	const int MAX_CARD_IN_ROW = 2;
	ViewBag.Title = "Home";
}



@for (int i = 0; i < Model.Articles.Count(); i+=MAX_CARD_IN_ROW)
{
	
	<div class="row py-3">
		<div class="card-deck">
			
			@foreach(var art in Model.Articles.Skip(i).Take(MAX_CARD_IN_ROW))
			{
				<div class="card">
					<a href="@Url.RouteUrl(new{controller="Article",action="Article", id=@art.ArticleID})">
						<img class="card-img-top" src="@art.Image" alt="Card image cap" />
						<div class="card-body text-dark" style="display: inline-block">
							<h5 class="card-title">@art.Caption</h5>
							<p class="card-text">@art.Text.Substring(0, 150)... </p>
							<p class="card-text"><small class="text-muted">@art.Date.ToShortDateString()</small></p>
						</div>
					</a>
				</div>
				
			}
		</div>
	</div>
}

<div class="text-center row btn-group" role="group" aria-label="Basic exapmle">
	@Html.PageLinks(Model.PageInfo,x=>Url.Action("List",
		new{page=x, category=Model.CurrentCategory}),
		new {@class= "btn btn-secondary" })
</div>
	




