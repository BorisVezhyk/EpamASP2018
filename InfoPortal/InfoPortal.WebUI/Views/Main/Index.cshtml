@model IEnumerable<InfoPortal.Domain.Article>

@{
	int counter = 0;
	ViewBag.Title = "Index";
}



@for (int i = 0; i < Model.Count(); i+=2)
{
	counter = 0;
	<div class="row py-3">
		<div class="card-deck">
			
			@foreach(var art in Model)
			{
				
				if (counter<i)
				{
					counter++;
					continue;
				}
				if (counter==i+2)
				{
					break;
				}
				<div class="card">
					<a href="#">
						<img class="card-img-top" src="@art.Image" alt="Card image cap" />
						<div class="card-body text-dark" style="display: inline-block">
							<h5 class="card-title">@art.Caption</h5>
							<p class="card-text">@art.Text.Substring(0, 150)... </p>
							<p class="card-text"><small class="text-muted">@art.Date.ToShortDateString()</small></p>
						</div>
					</a>
				</div>
				counter++;
			}
		</div>
	</div>
}
	




