<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - Informational portal</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
	<style>
		#jumbotronHead {
			background-image: url('../../Images/TitleForProject.jpg');
		}
		
	</style>
</head>
<body>
	<div class="jumbotron text-center my-0 py-3" id="jumbotronHead">
		<p class="display-4">Welcome to the Information Portal!</p>
	</div>
	<nav class="navbar navbar-expand-md navbar-dark bg-dark sticky-top">
		<div class="container">
			@*<a class="navbar-brand" href="#">Informational Portal</a>*@
			@Html.ActionLink("Informational Portal", "List","Main",null, new {@class="navbar-brand"})
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapse_target" aria-controls="collapse_target" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div class="collapse navbar-collapse" id="collapse_target">
				<ul class="navbar-nav">
					<li class="nav-item">@Html.ActionLink("Create a new article", "CreateNewArticle","Article",null, new{@class="nav-link"})</li>
				</ul>
				<ul class="navbar-nav ml-auto">
					@Html.Partial("_LoginPartial")
				</ul>

			</div>
		</div>
	</nav>
	<div class="container">
		<div class="justify-content-center">
			@{Html.RenderAction("Menu", "Nav");}
		</div>
	</div>

	<div class="container">
		<div class="row">
			<div class="col-md-12 col-lg-8">
				@RenderBody()
			</div>
			<div class="col-md-12 col-lg-4">
				<div class="row p-3">
					<div class="card flex-fill">
						<h5 class="card-header">
							Search
						</h5>
						<div class="card-body">
							
							@using (Html.BeginForm("Search", "Nav", FormMethod.Post,new{@class="filterbox"}))
							{
								<div class="form-group">
									<select class="custom-select mb-3 form-group"id="searchOption">
										<option selected>Select search</option>
										<option value="1">Articles</option>
										<option value="2">Tags</option>
										<option value="3">Date</option>
									</select>
								</div>
								<div class="form-group">
									<div class="input-group">
										<input type="text" class="form-control disabled" id="searchInput" placeholder="Search for..."/>
										<button class="btn btn-secondary" type="submit">Go!</button>
									</div>
								</div>
							}
						</div>
					</div>
				</div>
				<div class="row p-3">
					<div class="card flex-fill">
						<h5 class="card-header">Features</h5>
						<div class="card-body">
							Here will be anothe(top articles)
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<hr />
	<footer class="py-2">
		<div class=" text-center">
			<p>&copy; @DateTime.Now.Year - Informational portal</p>
		</div>

	</footer>
	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)

	<script src="~/Scripts/jquery-3.3.1.min.js" type="text/javascript"></script>
<script type="text/javascript">
	$(function () {
		$("#navtab .nav-link ").on("click", function(){
			$(".nav").find(".text-dark").removeClass("text-dark");
			$(this).addClass("text-dark");
			
		});
	});
</script>

<script type="text/javascript">
	$(function() {
		$("select").change(function() {
			var selectedVal = $(this).val();
			if (selectedVal.toString() == '1') {
				$("#searchInput").type("text");
				$("#searchInput").attr("disabled","false");
			} else if (selectedVal=='3') {
				$("#searchInput").type("date");
				$("#searchInput").attr("disabled","false");
			} else {
				$("#searchInput").attr("disabled","true");
			}
			
		});
	})
</script>
</body>
</html>
